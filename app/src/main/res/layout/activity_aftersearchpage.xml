<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aftersearchpage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore"
        android:textSize="25sp"
        android:fontFamily="@font/HussarBold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="100dp"
        android:inputType="text"
        android:hint="    Search"
        android:background="@drawable/border"
        />

    <ImageButton
        android:id="@+id/howtomakemenubtn"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:contentDescription="howtomakemenubutton"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/howtomakemenu" />

    <ImageButton
        android:id="@+id/coloringinhtmlbtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:contentDescription="coloringinhtmlbutton"
        android:background="@drawable/coloringinhtml"
        android:layout_marginStart="14dp"
        android:layout_marginTop="310dp"
        />

    <ImageButton
        android:id="@+id/importlinkbtn"
        android:contentDescription="importlinkbutton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/importlink"
        android:layout_marginStart="20dp"
        android:layout_marginTop="445dp"
        />

    <ImageButton
        android:id="@+id/howtomakenavbarbtn"
        android:layout_width="350dp"
        android:contentDescription="howtomakenavbarbutton"
        android:layout_height="wrap_content"
        android:background="@drawable/howtomakenavbar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="580dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="730dp"
        android:src="@drawable/rectangle"
        />

    <ImageView
        android:id="@+id/homebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home"
        android:layout_marginStart="30dp"
        android:layout_marginTop="732dp"
        />

    <ImageView
        android:id="@+id/searchbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/homebtn"
        android:background="@drawable/search"
        android:layout_marginStart="30dp"
        android:layout_marginTop="733dp"
        />

    <ImageView
        android:id="@+id/librarybtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/searchbtn"
        android:background="@drawable/Library"
        android:layout_marginStart="30dp"
        android:layout_marginTop="733dp"
        />

    <ImageView
        android:id="@+id/profilebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/librarybtn"
        android:background="@drawable/profile"
        android:layout_marginStart="30dp"
        android:layout_marginTop="735dp"
        />

</RelativeLayout>