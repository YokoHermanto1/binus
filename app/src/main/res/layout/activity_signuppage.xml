<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/closebtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/close"
        android:layout_marginRight="30dp"
        />

    <ImageView
        android:id="@+id/fullbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/closebtn"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="60dp"
        android:src="@drawable/fullbar"
        />

    <TextView
        android:id="@+id/headersignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginLeft="40dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closebtn"
        android:fontFamily="@font/HussarBold"
        />

    <TextView
        android:id="@+id/subheadersignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the email address and password you'd like to use sign in to Sunib hero"
        android:textSize="12sp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/headersignup"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/Agrandir"
        />

    <EditText
        android:id="@+id/emailsignup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/subheadersignup"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:hint="      Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/border"
        />

    <EditText
        android:id="@+id/passwordsignup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/emailsignup"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:hint="      Password"
        android:inputType="textPassword"
        android:background="@drawable/border"
        />

    <TextView
        android:id="@+id/signuptext"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/passwordsignup"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Have an account ?"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/GoLoginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="218dp"
        android:layout_marginTop="20dp"
        android:background="@color/transparent"
        android:text="Log in here"
        android:textColor="@color/orange"
        app:layout_constraintLeft_toRightOf="@id/signuptext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordsignup"
        />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/yellow"
        android:text="Continue"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>