<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/xbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/xbtn"
        android:layout_marginEnd="30dp"
        />

    <ImageView
        android:id="@+id/fullbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="60dp"
        android:src="@drawable/fullbar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1 of 1"
        android:layout_marginStart="170dp"
        android:layout_marginTop="90dp"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/HussarBold"
        android:text="Which of the following HTML tags is used to define paragraph?"
        android:textSize="21sp"
        android:layout_marginStart="80dp"
        android:textAlignment="center"
        android:layout_marginTop="190dp"
        />

    <ImageView
        android:id="@+id/answer1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/rectangleorange"
        android:layout_marginTop="450dp"
        android:layout_marginStart="45dp"
        />

    <ImageView
        android:id="@+id/answer2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/rectanglepink"
        android:layout_toEndOf="@+id/answer1"
        android:layout_marginTop="450dp"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:id="@+id/answer3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/rectanglepurpleblue"
        android:layout_marginTop="610dp"
        android:layout_marginStart="45dp"
        />

    <ImageView
        android:id="@+id/answer4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="610dp"
        android:layout_toEndOf="@id/answer3"
        android:src="@drawable/rectangleyellow" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="<div>"
        android:textColor="@color/black"
        android:backgroundTint="@color/transparent"
        android:layout_marginStart="70dp"
        android:layout_marginTop="500dp"
        android:textSize="25sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="<span>"
        android:textColor="@color/black"
        android:backgroundTint="@color/transparent"
        android:layout_marginStart="220dp"
        android:layout_marginTop="500dp"
        android:textSize="25sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="<p>"
        android:textColor="@color/black"
        android:backgroundTint="@color/transparent"
        android:layout_marginStart="80dp"
        android:layout_marginTop="660dp"
        android:textSize="25sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="<section>"
        android:textColor="@color/black"
        android:backgroundTint="@color/transparent"
        android:layout_marginStart="210dp"
        android:layout_marginTop="660dp"
        android:textSize="25sp"
        />

</RelativeLayout>