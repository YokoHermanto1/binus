<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkmail"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/emailconfirmimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/confrimemail"
        android:layout_marginTop="150dp"
        />

    <TextView
        android:id="@+id/headerconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm your email"
        android:fontFamily="@font/HussarBold"
        android:textAlignment="center"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/subheaderconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We just sent you an email"
        android:textAlignment="center"
        android:fontFamily="@font/Agrandir"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/confirmemailbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Open email app"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/blue"
        />

    <Button
        android:id="@+id/notreceiveemalibtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I didn't receive my email"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/blue"
        />

</LinearLayout>