<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/emailconfirmimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/confrimemail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        />

    <TextView
        android:id="@+id/headerconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emailconfirmimg"
        android:text="Confirm your email"
        android:fontFamily="@font/HussarBold"
        android:textAlignment="center"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/subheaderconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerconfirm"
        android:text="We just sent you an email"
        android:textAlignment="center"
        android:fontFamily="@font/Agrandir"
        android:textSize="17sp"
        />

    <Button
        android:id="@+id/confirmemailbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerconfirm"
        android:layout_marginTop="90dp"
        android:text="Open email app"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/blue"
        />

    <Button
        android:id="@+id/notreceiveemalibtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/confirmemailbtn"
        android:text="I didn't receive my email"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/blue"
        />


</androidx.constraintlayout.widget.ConstraintLayout>