<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/welcomelogo"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="250dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="100dp"
        />

    <TextView
        android:id="@+id/headerwelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Sunib Hero"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomelogo"
        android:textAlignment="center"
        android:fontFamily="@font/HussarBold"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/subheaderwelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/headerwelcome"
        android:text="Learn programming in the fun way!"
        android:fontFamily="@font/Agrandir"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/gohome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Continue"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/blue"
        android:layout_marginBottom="20dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>